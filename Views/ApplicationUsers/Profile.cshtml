
@{
    ViewBag.Title = "Profile";
}

@model AlWarraq.Models.ApplicationUser

@{
    ViewBag.Title = "Profile";
}
<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card mb-4">
                <div class="card-header text-center">
                    <h2 class="mb-0">Profile</h2>
                </div>
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        @if (string.IsNullOrEmpty(Model.ProfileImage))
                        {
                            <img src="https://via.placeholder.com/150" class="rounded-circle me-4" alt="Profile Image" width="150">
                        }
                        else
                        {
                            <img src="@Url.Content(Model.ProfileImage)" class="rounded-circle me-4" alt="Profile Image" width="150">
                        }
                        <div>
                            <h4 class="mb-1">@Model.FullName</h4>
                            <p class="text-muted mb-0">@Model.Email</p>
                        </div>
                    </div>
                </div>
            </div>

            <div class="card">
                <div class="card-header">
                    <h4>Account Details</h4>
                </div>
                <div class="card-body">
                    <form method="post" enctype="multipart/form-data">
                        <div class="mb-3">
                            <label for="fullName" class="form-label">Full Name</label>
                            <input type="text" class="form-control" id="fullName" name="fullName" value="@Model.FullName">
                        </div>
                        <div class="mb-3">
                            <label for="email" class="form-label">Email address</label>
                            <input type="email" class="form-control" id="email" name="email" value="@Model.Email">
                        </div>
                        <div class="mb-3">
                            <label for="password" class="form-label">Password</label>
                            <input type="password" name="password" class="form-control" id="password">
                        </div>
                        <div class="mb-3">
                            <label for="profileImage" class="form-label">Profile Image</label>
                            <input type="file" class="form-control" name="profileImage" id="profileImage">
                        </div>
                        <button type="submit" class="btn btn-primary">Update Profile</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>